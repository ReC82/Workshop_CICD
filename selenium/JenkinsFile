pipeline {
    agent { label 'java' }
    environment {
        PATH = "/usr/local/bin/:$PATH"
    }
    stages {
        stage('Run Selenium Test') {
            steps {
                sh 'sudo selenium-side-runner -c "goog:chromeOptions.args=[headless] browserName=chrome" ./BasicTest.side'
            }
        }
    }
}
