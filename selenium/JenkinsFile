pipeline {
    agent { label 'selenium' }
    environment {
        PATH = "/usr/local/bin/:$PATH"
    }
    stages {
        stage('Run Selenium Test') {
            steps {
                // Run Selenium-side-runner and store the output
                sh '/usr/local/bin/selenium-side-runner -c "goog:chromeOptions.args=[headless,no-sandbox,remote-debugging-pipe] browserName=chrome" /home/jenkins/workingdir/BasicTest.side'
            }
        }
    }
}
