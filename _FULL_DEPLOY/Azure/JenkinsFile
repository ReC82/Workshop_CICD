pipeline {
    agent any

    environment {
        // Email settings
        RECIPIENTS = 'lloyd.malfliet@gmail.com' // Change to the appropriate email addresses
        SENDER_EMAIL = 'jenkins@lodywood.be' // The sender's email address
    }

    stages {
        stage('Checkout') {
            steps {
                // Ensure correct checkout step
                checkout scm
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'JenkinsScan'
                    withSonarQubeEnv('mysonar') { 
                        sh "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey='wscicd'" 
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script {
                    def qg = waitForQualityGate()
                    if (qg.status != 'OK') {
                        error "Pipeline aborted due to quality gate failure: ${qg.status}"
                    }
                }
            }
        }
    }

    post {
        always {
            // Send an email regardless of the build outcome
            emailext(
                subject: "Jenkins Pipeline: ${currentBuild.fullDisplayName} - ${currentBuild.result}",
                body: """Build Number: ${currentBuild.number}
                        Build Result: ${currentBuild.result}
                        Build URL: ${env.BUILD_URL}""",
                to: env.RECIPIENTS,
                from: env.SENDER_EMAIL
            )
        }
    }
}
